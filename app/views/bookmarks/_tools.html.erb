    <ul class="bookmarkTools">
      <li class="cite">
        <%= link_to t('blacklight.tools.cite'), citation_catalog_path(:sort=>params[:sort], :per_page=>params[:per_page], :id => @documents.collect{|doc| doc.id}), {:id => 'citeLink', :name => 'citation', :class => 'lightboxLink btn'} %>
      </li>
      <li class="refworks">
        <%= render :partial => 'catalog/refworks_form', :locals => {:documents=>@documents} %>
      </li>

      <li class="endnote">
        <%= link_to t('blacklight.tools.endnote'), endnote_catalog_path(:sort=>params[:sort], :per_page=>params[:per_page], :id => @documents.collect {|doc| doc.id}, :format => 'endnote'), {:class => 'btn'}%>
      </li>
      <li class="email">
        <%= link_to t('blacklight.tools.email'), email_catalog_path(:sort=>params[:sort], :per_page=>params[:per_page], :id => @documents.collect {|doc| doc.id}), :class=>"lightboxLink btn", :id => "emailLink" %>
      </li>
      <li>
        <%= link_to t('blacklight.tools.clear'), clear_bookmarks_path, :method => :delete %>
      </li>
</ul>


